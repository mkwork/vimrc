# common .rc
export EDITOR=vim
export PROMPT_COMMAND='history -a'
# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=
HISTFILESIZE=

#gvim console entry
alias gvimr='gvim --remote-tab-silent'
alias tmux='tmux -2'
function tmux-session {
    session=$1
    tmux attach $2 -t $session || tmux new -s $session
}

export TERM=xterm-256color
alias pe4al='echo ":("'
alias toska='echo "^_^"'
alias ll='ls -al --color=auto'

#git pager
export GIT_PAGER="vim - -R -c ':AnsiEsc'"

# two line prompt
PS1="[\[\033[32m\]\w]\[\033[0m\]\n\[\033[1;36m\]\u@\h\[\033[1;33m\]-> \[\033[0m\]"

vimrc_dir=$(dirname $(readlink ~/.myrc))
export PATH="$PATH:$vimrc_dir/scripts/"

function ssh_addr {
    echo 196.2.1.1 36076 22 | cut -f1 -d ' '
}
